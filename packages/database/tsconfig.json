{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@prisma/client": ["./node_modules/.prisma/client/index"]
    }
  },
  "include": ["./src/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "dist"]
}
